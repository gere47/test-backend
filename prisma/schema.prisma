generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  email        String    @unique
  passwordHash String
  firstName    String?
  lastName     String?
  phone        String?
  roleId       Int
  role         Role      @relation(fields: [roleId], references: [id])
  isActive     Boolean   @default(true)
  lastLogin    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  createdStudents     Student[]           @relation("StudentCreatedBy")
  assignedClasses     Class[]             @relation("ClassTeachers")
  studentDocuments    StudentDocument[]
  examResults         ExamResult[]        @relation("EnteredExamResults")
  verifiedResults     ExamResult[]        @relation("VerifiedExamResults")
  recordedAttendances Attendance[]
  createdExams        Exam[]
  userSessions        UserSession[]
  auditLogs           AuditLog[]
  admissionTests      AdmissionTest[]
  teacherAssignments  TeacherAssignment[] @relation("UserTeacherAssignments")
}

model Role {
  id                Int                @id @default(autoincrement())
  name              String             @unique
  description       String?
  isSystem          Boolean            @default(false)
  permissions       Json?
  users             User[]
  modulePermissions ModulePermission[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model Module {
  id          Int                @id @default(autoincrement())
  name        String
  description String?
  path        String?
  icon        String?
  order       Int                @default(0)
  isActive    Boolean            @default(true)
  permissions ModulePermission[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model ModulePermission {
  id        Int      @id @default(autoincrement())
  roleId    Int
  moduleId  Int
  canView   Boolean  @default(false)
  canCreate Boolean  @default(false)
  canEdit   Boolean  @default(false)
  canDelete Boolean  @default(false)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([roleId, moduleId])
}

model UserSession {
  id           Int      @id @default(autoincrement())
  userId       Int
  sessionToken String   @unique
  ipAddress    String?
  userAgent    String?
  expiresAt    DateTime
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  userId      Int
  action      String
  entityType  String
  entityId    Int
  description String
  oldValues   Json?
  newValues   Json?
  timestamp   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

model AcademicSession {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)

  // Relations
  students                   Student[]
  exams                      Exam[]
  reportCards                ReportCard[]
  attendanceSummaries        AttendanceSummary[]
  classAutoAssignmentConfigs ClassAutoAssignmentConfig[]
  admissionClasses           AdmissionClass[]
  Class                      Class[]

  @@map("academic_sessions")
}

model Class {
  id       Int     @id @default(autoincrement())
  name     String
  grade    String?
  section  String?
  capacity Int?

  // Academic session this class belongs to
  academicSessionId Int?
  academicSession   AcademicSession? @relation(fields: [academicSessionId], references: [id])

  // Relations
  students            Student[]
  teacherAssignments  TeacherAssignment[] @relation("ClassTeacherAssignments")
  teachers            User[]              @relation("ClassTeachers")
  exams               Exam[]
  reportCards         ReportCard[]
  attendanceSummaries AttendanceSummary[]
  attendanceRecords   Attendance[]
  admissionClasses    AdmissionClass[]

  @@map("classes")
}

model Student {
  id                   Int      @id @default(autoincrement())
  studentId            String   @unique
  firstName            String
  lastName             String
  dateOfBirth          DateTime
  gender               String
  email                String?  @unique
  phone                String?
  identificationNumber String?  @unique
  address              String?
  city                 String?
  state                String?
  pincode              String?
  nationality          String?

  // Guardian Information
  guardianName       String
  guardianPhone      String
  guardianEmail      String?
  guardianRelation   String
  guardianOccupation String?
  guardianAddress    String?

  // Educational Background
  previousSchool       String?
  lastGradeCompleted   String?
  previousAcademicYear String?
  lastGradeMarks       String?

  // Admission Details
  admissionTestDate   DateTime?
  admissionTestScore  Float?
  admissionTestResult String?
  admissionRemarks    String?
  admissionCategory   String?

  // Academic Information
  sessionId Int
  classId   Int?
  section   String?
  status    String  @default("PENDING")
  remarks   String?

  // System Fields
  admissionDate DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
  createdBy     Int?
  updatedBy     Int?
  deletedBy     Int?

  // Relations
  session                AcademicSession         @relation(fields: [sessionId], references: [id])
  class                  Class?                  @relation(fields: [classId], references: [id])
  createdByUser          User?                   @relation("StudentCreatedBy", fields: [createdBy], references: [id])
  documents              StudentDocument[]
  examResults            ExamResult[]
  grades                 Grade[]
  reportCards            ReportCard[]
  attendance             Attendance[]
  attendanceSummaries    AttendanceSummary[]
  admissionTests         AdmissionTest[]
  educationalBackgrounds EducationalBackground[]

  @@map("students")
}

model AdmissionTest {
  id        Int       @id @default(autoincrement())
  studentId Int
  testType  String?
  score     Float?
  testDate  DateTime?
  remarks   String?
  createdAt DateTime  @default(now())
  createdBy Int

  student       Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  createdByUser User    @relation(fields: [createdBy], references: [id])

  @@map("admission_tests")
}

model ClassAutoAssignmentConfig {
  id        Int      @id @default(autoincrement())
  sessionId Int
  criteria  Json
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  academicSession AcademicSession @relation(fields: [sessionId], references: [id])
}

model EducationalBackground {
  id            Int      @id @default(autoincrement())
  studentId     Int
  institution   String
  qualification String
  yearCompleted Int
  grade         String?
  createdAt     DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("educational_backgrounds")
}

model StudentInquiry {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String
  phone           String
  interestedClass String
  status          String   @default("PENDING")
  createdAt       DateTime @default(now())
}

model StudentDocument {
  id           Int      @id @default(autoincrement())
  studentId    Int
  documentType String
  fileName     String
  fileUrl      String
  fileSize     Int
  mimeType     String
  description  String?
  uploadedBy   Int
  uploadedAt   DateTime @default(now())

  student        Student @relation(fields: [studentId], references: [id])
  uploadedByUser User    @relation(fields: [uploadedBy], references: [id])

  @@map("student_documents")
}

// schema.prisma (snippet - merge into your file)
model Attendance {
  id         Int      @id @default(autoincrement())
  studentId  Int
  classId    Int
  date       DateTime
  status     String
  subjectId  Int?
  recordedBy Int
  remarks    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  student        Student  @relation(fields: [studentId], references: [id])
  class          Class    @relation(fields: [classId], references: [id])
  subject        Subject? @relation(fields: [subjectId], references: [id])
  recordedByUser User     @relation(fields: [recordedBy], references: [id])

  // FIX: remove nullable subjectId from uniqueness to avoid NULL duplicates
  @@unique([studentId, classId, date])
  @@map("attendance")
}

model Holiday {
  id        Int      @id @default(autoincrement())
  name      String
  date      DateTime @unique
  createdAt DateTime @default(now())
}

model AttendanceSummary {
  id                Int      @id @default(autoincrement())
  studentId         Int
  classId           Int
  academicSessionId Int
  month             Int
  year              Int
  totalDays         Int
  presentDays       Int
  absentDays        Int
  lateDays          Int
  halfDays          Int
  percentage        Float
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  student         Student         @relation(fields: [studentId], references: [id])
  class           Class           @relation(fields: [classId], references: [id])
  academicSession AcademicSession @relation(fields: [academicSessionId], references: [id])

  @@unique([studentId, classId, academicSessionId, month, year], name: "student_month_summary")
  @@map("attendance_summary")
}

model TeacherAssignment {
  id        Int      @id @default(autoincrement())
  teacherId Int
  classId   Int
  subjectId Int?
  createdAt DateTime @default(now())

  teacher User     @relation("UserTeacherAssignments", fields: [teacherId], references: [id])
  class   Class    @relation("ClassTeacherAssignments", fields: [classId], references: [id])
  subject Subject? @relation("SubjectTeacherAssignments", fields: [subjectId], references: [id])
}

model ExamType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  weightage   Decimal  @db.Decimal(5, 2)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  exams Exam[]
}

model Exam {
  id                Int      @id @default(autoincrement())
  name              String
  examTypeId        Int
  classId           Int
  academicSessionId Int
  academicYear      String
  term              String
  startDate         DateTime
  endDate           DateTime
  description       String?
  isPublished       Boolean  @default(false)
  isActive          Boolean  @default(true)
  status            String   @default("SCHEDULED")
  totalWeightage    Decimal? @db.Decimal(5, 2)
  passingCriteria   String?
  instructions      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  examType        ExamType        @relation(fields: [examTypeId], references: [id])
  class           Class           @relation(fields: [classId], references: [id])
  academicSession AcademicSession @relation(fields: [academicSessionId], references: [id])
  createdBy       Int
  createdByUser   User            @relation(fields: [createdBy], references: [id])
  examSubjects    ExamSubject[]
  examResults     ExamResult[]
  grades          Grade[]
  reportCards     ReportCard[]

  @@index([classId, academicSessionId, term])
  @@index([startDate, endDate])
  @@index([classId, academicYear, term])
  @@map("exams")
}

model ExamSubject {
  id             Int      @id @default(autoincrement())
  examId         Int
  subjectId      Int
  examDate       DateTime
  startTime      String
  endTime        String
  duration       Int
  maxMarks       Int
  minMarks       Int
  isTheory       Boolean  @default(true)
  isPractical    Boolean  @default(false)
  practicalMarks Int?
  theoryMarks    Int?
  roomNumber     String?
  instructions   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  exam    Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id])

  @@unique([examId, subjectId])
}

model ExamResult {
  id             Int      @id @default(autoincrement())
  examId         Int
  studentId      Int
  subjectId      Int
  theoryMarks    Decimal? @db.Decimal(5, 2)
  practicalMarks Decimal? @db.Decimal(5, 2)
  totalMarks     Decimal  @db.Decimal(5, 2)
  maxMarks       Int
  percentage     Decimal  @db.Decimal(5, 2)
  grade          String
  remarks        String?
  isAbsent       Boolean  @default(false)
  enteredBy      Int
  verifiedBy     Int?
  isVerified     Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  exam           Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  student        Student @relation(fields: [studentId], references: [id])
  subject        Subject @relation(fields: [subjectId], references: [id])
  enteredByUser  User    @relation("EnteredExamResults", fields: [enteredBy], references: [id])
  verifiedByUser User?   @relation("VerifiedExamResults", fields: [verifiedBy], references: [id])

  @@unique([examId, studentId, subjectId])
  @@index([studentId, examId])
}

model Grade {
  id            Int      @id @default(autoincrement())
  studentId     Int
  examId        Int
  subjectId     Int
  marksObtained Decimal  @db.Decimal(5, 2)
  maxMarks      Decimal  @db.Decimal(5, 2)
  grade         String
  gradePoint    Decimal? @db.Decimal(3, 2)
  percentage    Decimal  @db.Decimal(5, 2)
  isPassed      Boolean  @default(true)
  remarks       String?

  student Student @relation(fields: [studentId], references: [id])
  exam    Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, examId, subjectId])
  @@index([studentId, examId])
  @@index([subjectId, examId])
}

model ReportCard {
  id                Int       @id @default(autoincrement())
  studentId         Int
  examId            Int
  classId           Int
  academicSessionId Int
  totalMarks        Decimal   @db.Decimal(6, 2)
  obtainedMarks     Decimal   @db.Decimal(6, 2)
  percentage        Decimal   @db.Decimal(5, 2)
  finalGrade        String
  rank              Int?
  remarks           String?
  isPublished       Boolean   @default(false)
  publishedAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  student         Student         @relation(fields: [studentId], references: [id])
  exam            Exam            @relation(fields: [examId], references: [id])
  class           Class           @relation(fields: [classId], references: [id])
  academicSession AcademicSession @relation(fields: [academicSessionId], references: [id])

  @@unique([studentId, examId])
  @@index([studentId, academicSessionId])
}

model GradeScale {
  id          Int      @id @default(autoincrement())
  grade       String   @unique
  minPercent  Decimal  @db.Decimal(5, 2)
  maxPercent  Decimal  @db.Decimal(5, 2)
  gradePoint  Decimal  @db.Decimal(3, 2)
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Subject {
  id          Int     @id @default(autoincrement())
  name        String
  code        String? @unique
  description String?

  teacherAssignments TeacherAssignment[] @relation("SubjectTeacherAssignments")
  examSubjects       ExamSubject[]
  examResults        ExamResult[]
  grades             Grade[]
  attendanceRecords  Attendance[]

  @@map("subjects")
}

model AdmissionClass {
  id                 Int      @id @default(autoincrement())
  admissionSessionId Int
  classId            Int
  availableSeats     Int
  appliedSeats       Int      @default(0)
  status             String   @default("open")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  academicSession AcademicSession @relation(fields: [admissionSessionId], references: [id])
  class           Class           @relation(fields: [classId], references: [id])
}
