// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  passwordHash String
  firstName    String?
  lastName     String?
  phone        String?
  roleId       Int
  role         Role     @relation(fields: [roleId], references: [id])
  isActive     Boolean  @default(true)
  lastLogin    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  students Student[]
  classes  Class[]  @relation("ClassTeacher")
  studentDocuments StudentDocument[] @relation("UploadedStudentDocuments")
  examResults      ExamResult[]      @relation("EnteredResults")
  verifiedResults  ExamResult[]      @relation("VerifiedResults")
  recordedAttendances Attendance[] @relation("RecordedAttendances")
  createdExams        Exam[]       @relation("CreatedExams")
  
  // Add missing opposite relations for new models
  sessions  UserSession[]
  auditLogs AuditLog[]
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  permissions Json?
  isSystem    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users User[]
  modulePermissions ModulePermission[]  // Add this for ModulePermission relation
}

model AcademicSession {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean  @default(true)
  admissionOpen Boolean  @default(false)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  students Student[]
  classes  Class[]
  admissionSessions AdmissionSession[]
}

model AdmissionSession {
  id                Int      @id @default(autoincrement())
  name              String
  academicSessionId Int
  startDate         DateTime
  endDate           DateTime
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  academicSession   AcademicSession @relation(fields: [academicSessionId], references: [id])
  admissionClasses  AdmissionClass[]
}

model AdmissionClass {
  id                  Int              @id @default(autoincrement())
  admissionSessionId  Int
  classId             Int
  availableSeats      Int
  appliedSeats        Int              @default(0)
  status              String           @default("open")
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  // Relations
  admissionSession AdmissionSession @relation(fields: [admissionSessionId], references: [id])
  class            Class            @relation(fields: [classId], references: [id])
}

model Class {
  id              Int      @id @default(autoincrement())
  name            String
  section         String?
  capacity        Int?
  sessionId       Int
  classTeacherId  Int?
  roomNumber      String?
  status          String   @default("active")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  session        AcademicSession @relation(fields: [sessionId], references: [id])
  classTeacher   User?           @relation("ClassTeacher", fields: [classTeacherId], references: [id])
  students       Student[]
  admissionClasses AdmissionClass[]
  attendances    Attendance[]
  exams          Exam[]
}

model Student {
  id                  Int      @id @default(autoincrement())
  studentId           String   @unique
  userId              Int?     @unique
  admissionNumber     String?
  admissionDate       DateTime?
  firstName           String
  lastName            String
  dateOfBirth         DateTime
  gender              String
  email               String   @unique
  phone               String   @unique
  address             String?
  city                String?
  state               String?
  pincode             String?
  nationality         String?
  guardianName        String?
  guardianRelation    String?
  guardianEmail       String?
  guardianPhone       String?
  guardianOccupation  String?
  classId             Int?
  sessionId           Int?
  status              String?  @default("Active")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  user                User?                 @relation(fields: [userId], references: [id])
  class               Class?                @relation(fields: [classId], references: [id])
  session             AcademicSession?      @relation(fields: [sessionId], references: [id])
  educationalBackgrounds EducationalBackground[]
  documents           StudentDocument[]
  attendances         Attendance[]
  examResults         ExamResult[]
}

model EducationalBackground {
  id              Int      @id @default(autoincrement())
  studentId       Int
  institution     String
  qualification   String
  yearCompleted   Int
  percentage      Float?
  board           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model StudentDocument {
  id            Int      @id @default(autoincrement())
  studentId     Int
  documentType  String
  fileName      String
  fileUrl       String
  fileSize      Int
  mimeType      String
  uploadedBy    Int
  uploadedAt    DateTime @default(now())
  status        String   @default("active")

  // Relations
  student      Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  uploadedByUser User  @relation("UploadedStudentDocuments", fields: [uploadedBy], references: [id])
}

model Attendance {
  id          Int      @id @default(autoincrement())
  studentId   Int
  classId     Int
  date        DateTime
  status      String   // present, absent, late, half-day
  remarks     String?
  recordedBy  Int
  recordedAt  DateTime @default(now())

  // Relations
  student Student @relation(fields: [studentId], references: [id])
  class   Class   @relation(fields: [classId], references: [id])
  recordedByUser User @relation("RecordedAttendances", fields: [recordedBy], references: [id])
}

// ========== AUTHENTICATION & AUTHORIZATION MODELS ==========

model Module {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  path        String?
  icon        String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  isSystem    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  permissions ModulePermission[]

  @@map("modules")
}

model ModulePermission {
  id        Int      @id @default(autoincrement())
  roleId    Int
  moduleId  Int
  canView   Boolean  @default(false)
  canCreate Boolean  @default(false)
  canEdit   Boolean  @default(false)
  canDelete Boolean  @default(false)
  canManage Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role   Role   @relation(fields: [roleId], references: [id])
  module Module @relation(fields: [moduleId], references: [id])

  @@unique([roleId, moduleId])
  @@map("module_permissions")
}

model UserSession {
  id           Int      @id @default(autoincrement())
  userId       Int
  sessionToken String   @unique
  ipAddress    String?
  userAgent    String?
  expiresAt    DateTime
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("user_sessions")
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  userId      Int
  action      String
  entityType  String
  entityId    Int
  description String?
  ipAddress   String?
  userAgent   String?
  timestamp   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id])
}

// ========== EXAM MODELS ==========

model Subject {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  code        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  examSubjects ExamSubject[]
  examResults  ExamResult[]
}

model ExamType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  weightage   Decimal  @db.Decimal(5, 2)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  exams Exam[]

  @@map("exam_types")
}

model Exam {
  id           Int      @id @default(autoincrement())
  name         String
  examTypeId   Int
  classId      Int
  academicYear String
  term         String
  startDate    DateTime
  endDate      DateTime
  description  String?
  isPublished  Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  examType     ExamType      @relation(fields: [examTypeId], references: [id])
  class        Class         @relation(fields: [classId], references: [id])
  createdBy    Int
  createdByUser User         @relation("CreatedExams", fields: [createdBy], references: [id])
  examSubjects ExamSubject[]
  examResults  ExamResult[]

  @@index([classId, academicYear, term])
  @@map("exams")
}

model ExamSubject {
  id             Int      @id @default(autoincrement())
  examId         Int
  subjectId      Int
  examDate       DateTime
  startTime      String
  endTime        String
  duration       Int
  maxMarks       Int
  minMarks       Int
  isTheory       Boolean  @default(true)
  isPractical    Boolean  @default(false)
  practicalMarks Int?
  theoryMarks    Int?
  roomNumber     String?
  instructions   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  exam    Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id])

  @@unique([examId, subjectId])
  @@map("exam_subjects")
}

model ExamResult {
  id             Int      @id @default(autoincrement())
  examId         Int
  studentId      Int
  subjectId      Int
  theoryMarks    Decimal? @db.Decimal(5, 2)
  practicalMarks Decimal? @db.Decimal(5, 2)
  totalMarks     Decimal  @db.Decimal(5, 2)
  maxMarks       Int
  percentage     Decimal  @db.Decimal(5, 2)
  grade          String
  remarks        String?
  isAbsent       Boolean  @default(false)
  enteredBy      Int
  verifiedBy     Int?
  isVerified     Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  exam           Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  student        Student @relation(fields: [studentId], references: [id])
  subject        Subject @relation(fields: [subjectId], references: [id])
  enteredByUser  User    @relation("EnteredResults", fields: [enteredBy], references: [id])
  verifiedByUser User?   @relation("VerifiedResults", fields: [verifiedBy], references: [id])

  @@unique([examId, studentId, subjectId])
  @@index([studentId, examId])
  @@map("exam_results")
}

model GradeScale {
  id          Int      @id @default(autoincrement())
  grade       String   @unique
  minPercent  Decimal  @db.Decimal(5, 2)
  maxPercent  Decimal  @db.Decimal(5, 2)
  gradePoint  Decimal  @db.Decimal(3, 2)
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("grade_scales")
}